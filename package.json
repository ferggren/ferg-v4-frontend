{
  "name": "ferg.in",
  "version": "1.0.0",
  "description": "Ferg.in frontend",
  "author": "ferg",
  "license": "MIT",
  "homepage": "https://ferg.in/",
  "scripts": {
    "lint": "./node_modules/.bin/eslint ./src",
    "build": "NODE_ENV='production' WEBPACK_MODE='build' node build.js",
    "dev-watch": "NODE_ENV='dev' WEBPACK_MODE='watch' node build.js",
    "dev-server": "NODE_ENV='dev' WEBPACK_MODE='server' node build.js",
    "profile": "NODE_ENV='dev' WEBPACK_MODE='profile' node build.js",
    "nodemon": "NODE_ENV='dev' NODE_PATH=./:./src nodemon server.js",
    "server-start": "NODE_ENV='production' API_HOST='https://ferg.in' NODE_PATH='./:./src' pm2 start server.js",
    "server-restart": "NODE_ENV='production' API_HOST='https://ferg.in' NODE_PATH='./:./src' pm2 restart server.js",
    "server-stop": "NODE_ENV='production' pm2 stop server"
  },
  "dependencies": {
    "babel-core": "^6.7.7",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-1": "^6.1.18",
    "babel-plugin-react-transform": "^2.0.2",
    "babel-plugin-transform-object-rest-spread": "^6.6.5",
    "babel-plugin-transform-react-display-name": "^6.5.0",
    "babel-polyfill": "^6.16.0",

    "eslint": "^3.13.1",
    "eslint-config-airbnb": "^14.0.0",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.2",
    "eslint-plugin-react": "^6.9.0",
    "eslint-plugin-babel": "^3.2.0",

    "webpack": "^1.13.0",
    "webpack-dev-server": "*",

    "css-loader": "^0.23.1",
    "exports-loader": "^0.6.3",
    "file-loader": "*",
    "imports-loader": "^0.6.5",
    "json-loader": "*",
    "react-hot-loader": "1.3.0",
    "sass-loader": "*",
    "style-loader": "*",
    "url-loader": "*",
    
    "react": "^15.0.2",
    "react-dom": "^15.0.2",
    "react-redux": "^4.4.5",
    "react-router": "^2.4.0",
    "react-router-redux": "^4.0.4",
    "redux": "^3.5.2",
    "redux-thunk": "^2.1.0",

    "express": "^4.14.0",
    "extract-text-webpack-plugin": "*",
    "md5-file": "^3.1.1",
    "node-fetch": "^1.6.3",
    "node-sass": "^3.4.2",
    "nodemon": "^1.11.0"
  },
  "devDependencies": {}
}
