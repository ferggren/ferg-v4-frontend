{
  "name": "ferg.in-frontend",
  "version": "1.0.0",
  "description": "Frontend part of Ferg.in",
  "author": "Filin Sergey <me@ferg.in> (http://github.com/ferggren)",
  "license": "MIT",
  "homepage": "https://ferg.in/",
  "repository": {
    "type": "git",
    "url": "https://github.com/ferggren/ferg.in.frontend.git"
  },
  "keywords": [
    "javascript",
    "react",
    "reactjs",
    "isomorphic",
    "universal",
    "server-rendering",
    "nodejs",
    "webpack"
  ],
  "dependencies": {
    "babel-core": "^6.23.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.3.2",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-1": "^6.22.0",
    "babel-preset-stage-2": "^6.13.0",
    "babel-plugin-react-transform": "^2.0.2",
    "babel-plugin-transform-object-rest-spread": "^6.6.5",
    "babel-plugin-transform-react-display-name": "^6.5.0",
    "babel-polyfill": "^6.23.0",

    "eslint": "^3.15.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.0",
    "eslint-plugin-babel": "^4.0.0",

    "uglify-js": "git://github.com/mishoo/UglifyJS2#harmony",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.3.0",

    "css-loader": "^0.26.1",
    "exports-loader": "^0.6.3",
    "file-loader": "*",
    "imports-loader": "^0.6.5",
    "json-loader": "*",
    "react-hot-loader": "^3.0.0-beta.6",
    "sass-loader": "*",
    "style-loader": "*",
    "url-loader": "*",
    
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-router": "^3.0.2",
    "react-redux": "^5.0.2",
    "react-router-redux": "^4.0.8",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0",

    "express": "^4.14.0",
    "extract-text-webpack-plugin": "^2.0.0-beta",
    "md5-file": "^3.1.1",
    "node-fetch": "^1.6.3",
    "node-sass": "^4.5",
    "nodemon": "^1.11.0"
  },
  "devDependencies": {},
  "scripts": {
    "lint": "./node_modules/.bin/eslint ./src",
    "build": "NODE_ENV='production' WEBPACK_MODE='build' node build.js",
    "dev-watch": "NODE_ENV='dev' WEBPACK_MODE='watch' node build.js",
    "dev-server": "NODE_ENV='dev' WEBPACK_MODE='server' node build.js",
    "profile": "NODE_ENV='dev' WEBPACK_MODE='profile' node build.js",
    "nodemon": "NODE_ENV='dev' NODE_PATH=./:./src nodemon server.js",
    "server-start": "NODE_ENV='production' API_HOST='https://ferg.in' NODE_PATH='./:./src' pm2 start server.js --name ferg",
    "server-restart": "NODE_ENV='production' API_HOST='https://ferg.in' NODE_PATH='./:./src' pm2 restart ferg",
    "server-stop": "NODE_ENV='production' pm2 stop ferg"
  }
}
